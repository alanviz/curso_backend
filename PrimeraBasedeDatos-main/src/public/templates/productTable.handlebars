{{#if productos}}
<table class="table table-striped table-dark table-hover table-bordered contenedor-productos">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Precio</th>
      <th scope="col">Foto</th>
    </tr>
  </thead>
  <tbody>
    {{#each productos}}
    <tr>
        <td>{{this.title}}</td>
        <td>${{this.price}}</td>
        <td><img class="img-producto" src={{this.thumbnail}}></td>
    </tr>
    {{/each}}
    </tbody>
</table>
{{else}}
<p>No hay productos</p>
{{/if}}